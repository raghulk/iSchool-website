@{
    ViewData["Title"] = "Home";
}
@model Project3_FinalExam.ViewModels.HomeViewModel
<div class="intro-image-div">
    <img src="~/images/intro-image.jpeg" class="intro-image">
    <img src="~/images/big-orange-trail.png" class="orange-trail" alt="">
    <div class="inner-content">
        <p class="inner-text">Information Sciences and Technologies</p>
    </div>
</div>
<div>
    <h2 class="text-center position-relative pt-3">@Model.Title</h2>
    <p class="position-relative pt-3">@Model.Description</p>
    <p id="about-quote">"@Model.Quote"</p>
    <p>-@Model.QuoteAuthor</p>
</div>
<style>
    .inner-text {
        font-size: 36px;
    }
    .intro-image-div {
        max-height: 500px;
        overflow: hidden;
    }

    .intro-image {
        width: 100%;
        height: 700px;
    }
    .orange-trail {
        width: 468px;
        position: relative;
        right: 235px;
        bottom: 400px;
        opacity: 0.85;
    }

    .inner-content {
        position: relative;
        bottom: 850px;
        width: 400px;
        font-size: 36px;
        color: white;
        left: 100px;
        font-weight: bold;
    }
    #about-quote {
        font-style: italic;
    }
</style>
